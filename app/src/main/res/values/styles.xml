<resources>

  <style name="None" />

  <style name="Squanchy.Appbar" parent="None">
    <item name="android:background">?colorPrimary</item>
    <item name="android:elevation">@dimen/toolbar_elevation</item>
  </style>

  <style name="Squanchy.Toolbar" parent="Widget.AppCompat.Light.ActionBar">
    <item name="android:titleTextStyle">@style/TextAppearance.Squanchy.Toolbar</item>
    <item name="android:subtitleTextStyle">@style/TextAppearance.Squanchy.Toolbar</item>
  </style>

  <style name="TextAppearance.Squanchy.Toolbar" parent="TextAppearance.AppCompat.Widget.ActionBar.Title.Inverse">
    <item name="fontPath">?titleTypeface</item>
  </style>

  <style name="Squanchy.Toolbar.Light" parent="Widget.AppCompat.Light.ActionBar">
    <item name="android:titleTextStyle">@style/TextAppearance.Squanchy.Toolbar.Accent</item>
    <item name="android:subtitleTextStyle">@style/TextAppearance.Squanchy.Toolbar.Accent</item>
  </style>

  <style name="TextAppearance.Squanchy.Toolbar.Accent" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
    <item name="android:textColor">?colorAccent</item>
    <item name="fontPath">?titleTypeface</item>
  </style>

  <style name="Squanchy.Tabs" parent="Widget.Design.TabLayout" />

  <style name="Squanchy.Tabs.Schedule" parent="None">
    <item name="tabIndicatorColor">?colorControlNormal</item>
    <item name="tabTextAppearance">@style/TextAppearance.Squanchy.Tab</item>
    <item name="tabSelectedTextColor">?android:textColorPrimary</item>
  </style>

  <style name="TextAppearance.Squanchy.Tab" parent="TextAppearance.AppCompat.Button">
    <item name="android:textSize">@dimen/tab_text</item>
    <item name="android:textColor">@color/text_inverse_inactive</item>
    <item name="textAllCaps">false</item>
    <item name="fontPath">?titleTypeface</item>
  </style>

  <style name="Squanchy.Tabs.SpeakerList" parent="None" />

  <style name="TextAppearance.Squanchy.Card.Speaker" parent="None">
    <item name="android:textColor">?android:textColorSecondary</item>
    <item name="android:textSize">@dimen/card_speaker</item>
    <item name="fontPath">?defaultMediumTypeface</item>
  </style>

  <style name="Schedule.Card.Timestamp" parent="None">
    <item name="android:gravity">start|center_vertical</item>
    <item name="android:textAppearance">@style/TextAppearance.Squanchy.Card.Timestamp</item>
  </style>

  <style name="TextAppearance.Squanchy.Card.Timestamp" parent="None">
    <item name="android:textColor">?colorPrimary</item>
    <item name="android:textSize">@dimen/card_timestamp</item>
    <item name="fontPath">?defaultBoldTypeface</item>
  </style>

  <style name="Schedule.Card.Title" parent="None">
    <item name="android:textAppearance">@style/TextAppearance.Squanchy.Card.Title</item>
  </style>

  <style name="TextAppearance.Squanchy.Card.Title" parent="None">
    <item name="android:textColor">?android:textColorPrimary</item>
    <item name="android:textSize">@dimen/card_title</item>
    <item name="fontPath">?titleTypeface</item>
  </style>

  <style name="Schedule.Card.Speaker.Photo" parent="None" />

  <style name="Schedule.Card.Speaker.Names" parent="None">
    <item name="android:gravity">start|center_vertical</item>
    <item name="android:lineSpacingExtra">@dimen/card_speaker_line_spacing_extra</item>
    <item name="android:lineSpacingMultiplier">1</item>
    <item name="android:textAppearance">@style/TextAppearance.Squanchy.Card.Speaker</item>
  </style>

  <style name="Search.Appbar" parent="Widget.Design.AppBarLayout">
    <item name="android:elevation">@dimen/toolbar_elevation</item>
  </style>

  <style name="Search.Toolbar" parent="Squanchy.Toolbar">
    <item name="android:background">?colorPrimary</item>
  </style>

  <style name="ThemeOverlay.Squanchy.Toolbar" parent="ThemeOverlay.AppCompat.Light">
    <item name="colorControlNormal">?colorAccent</item>
  </style>

  <style name="ThemeOverlay.Squanchy.Toolbar.Search" parent="ThemeOverlay.Squanchy.Toolbar">
    <item name="colorPrimary">@color/window_background</item>
    <item name="colorAccent">@color/primary</item>
  </style>

  <style name="Search.SectionHeader" parent="TextAppearance.AppCompat.Body1">
    <item name="android:textColor">?android:colorPrimary</item>
    <item name="fontPath">?titleTypeface</item>
  </style>

  <style name="Search.Caption" parent="TextAppearance.AppCompat.Caption">
    <item name="android:maxLines">2</item>
    <item name="android:textColor">?android:textColorSecondary</item>
  </style>

  <style name="Search.EditText" parent="None">
    <item name="android:background">@null</item>
    <item name="android:hint">@string/menu_search</item>
    <item name="android:imeOptions">actionSearch</item>
    <item name="android:inputType">text</item>
    <item name="android:maxLines">1</item>
  </style>

  <style name="Search.GenericItem" parent="None">
    <item name="android:gravity">center_horizontal|top</item>
    <item name="android:background">?selectableItemBackground</item>
  </style>

  <style name="Search.EmptyMessage" parent="TextAppearance.AppCompat.Body1">
    <item name="android:text">@string/start_typing_to_search</item>
    <item name="android:textColor">?android:textColorSecondary</item>
    <item name="android:textSize">@dimen/search_empty_state_text</item>
    <item name="fontPath">?defaultLightTypeface</item>
  </style>

  <style name="EventDetails.Header.Speaker.Names" parent="None">
    <item name="android:gravity">start|center_vertical</item>
    <item name="android:lineSpacingExtra">@dimen/event_details_speaker_line_spacing_extra</item>
    <item name="android:lineSpacingMultiplier">1</item>
    <item name="android:textAppearance">@style/TextAppearance.Squanchy.EventDetails.Header.Speaker</item>
  </style>

  <style name="TextAppearance.Squanchy.EventDetails.Header.Speaker" parent="None">
    <item name="android:textColor">?android:textColorPrimary</item>
    <item name="android:textSize">@dimen/event_details_speaker</item>
    <item name="fontPath">?titleTypeface</item>
  </style>

  <style name="EventDetails.Header.Title" parent="None">
    <item name="android:textAppearance">@style/TextAppearance.Squanchy.EventDetails.Header.Title</item>
  </style>

  <style name="TextAppearance.Squanchy.EventDetails.Header.Title" parent="None">
    <item name="android:textColor">?android:textColorPrimary</item>
    <item name="android:textSize">@dimen/event_details_title</item>
    <item name="fontPath">?titleTypeface</item>
  </style>

  <style name="EventDetails.Header.Speaker.Photo" parent="None">
    <item name="android:clickable">true</item>
    <item name="android:foreground">@drawable/white_circle_bound_touch_feedback</item>
  </style>

  <style name="EventDetails.Body.RowContainer" parent="None">
    <item name="android:gravity">fill_horizontal|center_vertical</item>
    <item name="android:orientation">horizontal</item>
    <item name="android:minHeight">@dimen/event_details_body_row_height</item>
  </style>

  <style name="EventDetails.Body.Label" parent="None">
    <item name="android:paddingStart">@dimen/event_details_body_label_padding_start</item>
    <item name="android:textAppearance">@style/TextAppearance.Squanchy.EventDetails.Body.Label</item>
  </style>

  <style name="EventDetails.Body.Label.When" parent="EventDetails.Body.Label">
    <item name="android:text">@string/event_details_body_label_when_text</item>
  </style>

  <style name="EventDetails.Body.Label.Where" parent="EventDetails.Body.Label">
    <item name="android:text">@string/event_details_body_label_where_text</item>
  </style>

  <style name="EventDetails.Body.Label.About" parent="EventDetails.Body.Label">
    <item name="android:gravity">start|center_vertical</item>
    <item name="android:minHeight">@dimen/event_details_body_row_height</item>
    <item name="android:text">@string/event_details_body_label_about_text</item>
  </style>

  <style name="TextAppearance.Squanchy.EventDetails.Body.Label" parent="None">
    <item name="android:textColor">?colorPrimary</item>
    <item name="android:textSize">@dimen/event_details_body_label_text</item>
    <item name="fontPath">?titleTypeface</item>
  </style>

  <style name="EventDetails.Body.Value" parent="None">
    <item name="android:lineSpacingExtra">@dimen/event_details_speaker_line_spacing_extra</item>
    <item name="android:lineSpacingMultiplier">1</item>
    <item name="android:textAppearance">@style/TextAppearance.Squanchy.EventDetails.Body.Value</item>
  </style>

  <style name="TextAppearance.Squanchy.EventDetails.Body.Value" parent="None">
    <item name="android:textColor">?android:textColorPrimary</item>
    <item name="android:textSize">@dimen/event_details_body_value_text</item>
    <item name="fontPath">?defaultMediumTypeface</item>
  </style>

  <style name="EventDetails.Fab" parent="None">
    <item name="backgroundTint">?colorPrimary</item>
    <item name="android:clickable">true</item>
    <item name="android:foreground">@drawable/white_circle_bound_touch_feedback</item>
    <item name="android:src">@drawable/ic_favorite_empty</item>
  </style>

  <style name="TextAppearance.Squanchy.Tweet.Timestamp" parent="None">
    <item name="android:textColor">?android:textColorSecondary</item>
    <item name="android:textSize">@dimen/card_twitter</item>
    <item name="fontPath">?defaultMediumTypeface</item>
  </style>

  <style name="Tweet.Card.Title" parent="None">
    <item name="android:textAppearance">@style/TextAppearance.Squanchy.Card.Title</item>
  </style>

  <style name="Tweet.Card.Timestamp" parent="None">
    <item name="android:gravity">center</item>
    <item name="android:lineSpacingExtra">@dimen/card_twitter_line_spacing_extra</item>
    <item name="android:lineSpacingMultiplier">1</item>
    <item name="android:textAppearance">@style/TextAppearance.Squanchy.Tweet.Timestamp</item>
  </style>

  <style name="SpeakerDetails.Header.Speaker.Photo" parent="None" />

  <style name="SpeakerDetails.Header.Speaker.Name" parent="None">
    <item name="android:textAppearance">@style/TextAppearance.Squanchy.SpeakerDetails.Header.Speaker.Name</item>
  </style>

  <style name="TextAppearance.Squanchy.SpeakerDetails.Header.Speaker.Name" parent="None">
    <item name="android:textColor">?android:textColorPrimary</item>
    <item name="android:textSize">@dimen/speaker_details_speaker_name</item>
    <item name="fontPath">?titleTypeface</item>
  </style>

  <style name="SpeakerDetails.Header.Speaker.Company" parent="None">
    <item name="android:textAppearance">@style/TextAppearance.Squanchy.SpeakerDetails.Header.Speaker.Company</item>
  </style>

  <style name="TextAppearance.Squanchy.SpeakerDetails.Header.Speaker.Company" parent="None">
    <item name="android:textColor">?android:textColorPrimary</item>
    <item name="android:textSize">@dimen/speaker_details_speaker_company</item>
    <item name="fontPath">?defaultBoldTypeface</item>
  </style>

  <style name="SpeakerDetails.Bio" parent="None">
    <item name="android:requiresFadingEdge">vertical</item>
    <item name="android:fadingEdgeLength">64dp</item>
    <item name="android:colorBackgroundCacheHint">@color/white</item>
  </style>

  <style name="SpeakerDetails.Bio.Text" parent="None">
    <item name="android:lineSpacingExtra">@dimen/speaker_details_bio_line_spacing_extra</item>
    <item name="android:lineSpacingMultiplier">1</item>
    <item name="android:paddingBottom">@dimen/speaker_details_bio_padding</item>
    <item name="android:textAppearance">@style/TextAppearance.Squanchy.SpeakerDetails.Bio</item>
  </style>

  <style name="TextAppearance.Squanchy.SpeakerDetails.Bio" parent="None">
    <item name="android:textColor">?android:textColorSecondary</item>
    <item name="android:textSize">@dimen/speaker_details_bio</item>
    <item name="fontPath">?defaultMediumTypeface</item>
  </style>

  <style name="VenueInfo.Label" parent="None">
    <item name="android:gravity">start|center_vertical</item>
    <item name="android:paddingStart">@dimen/venue_info_horizontal_padding</item>
    <item name="android:textAppearance">@style/TextAppearance.Squanchy.VenueInfo.Label</item>
  </style>

  <style name="TextAppearance.Squanchy.VenueInfo.Label" parent="None">
    <item name="android:textColor">?colorPrimary</item>
    <item name="android:textSize">@dimen/venue_info_label_text</item>
    <item name="fontPath">?titleTypeface</item>
  </style>

  <style name="VenueInfo.Name.Text" parent="None">
    <item name="android:paddingStart">@dimen/venue_info_horizontal_padding</item>
    <item name="android:paddingEnd">@dimen/venue_info_horizontal_padding</item>
    <item name="android:textAppearance">@style/TextAppearance.Squanchy.VenueInfo.Name</item>
  </style>

  <style name="TextAppearance.Squanchy.VenueInfo.Name" parent="None">
    <item name="android:textColor">?android:textColorPrimary</item>
    <item name="android:textSize">@dimen/venue_info_name_text</item>
    <item name="fontPath">?titleTypeface</item>
  </style>

  <style name="VenueInfo.Address.Text" parent="None">
    <item name="android:lineSpacingExtra">@dimen/venue_info_address_line_spacing_extra</item>
    <item name="android:lineSpacingMultiplier">1</item>
    <item name="android:paddingStart">@dimen/venue_info_horizontal_padding</item>
    <item name="android:paddingEnd">@dimen/venue_info_horizontal_padding</item>
    <item name="android:textAppearance">@style/TextAppearance.Squanchy.VenueInfo.Address</item>
  </style>

  <style name="TextAppearance.Squanchy.VenueInfo.Address" parent="None">
    <item name="android:textColor">?android:textColorSecondary</item>
    <item name="android:textSize">@dimen/venue_info_address_text</item>
    <item name="fontPath">?defaultMediumTypeface</item>
  </style>

  <style name="VenueInfo.Description.Text" parent="None">
    <item name="android:lineSpacingExtra">@dimen/venue_info_description_line_spacing_extra</item>
    <item name="android:lineSpacingMultiplier">1</item>
    <item name="android:paddingStart">@dimen/venue_info_horizontal_padding</item>
    <item name="android:paddingEnd">@dimen/venue_info_horizontal_padding</item>
    <item name="android:textAppearance">@style/TextAppearance.Squanchy.VenueInfo.Description</item>
  </style>

  <style name="TextAppearance.Squanchy.VenueInfo.Description" parent="None">
    <item name="android:textColor">?android:textColorSecondary</item>
    <item name="android:textSize">@dimen/venue_info_description_text</item>
    <item name="fontPath">?defaultMediumTypeface</item>
  </style>

  <style name="VenueInfo.Description.Map" parent="None">
    <item name="android:clickable">true</item>
    <item name="android:foreground">?android:attr/selectableItemBackground</item>
  </style>

  <style name="Settings.Header.User.Container" parent="None">
    <item name="android:gravity">fill_horizontal|center_vertical</item>
    <item name="android:orientation">horizontal</item>
    <item name="android:paddingStart">@dimen/settings_header_user_container_padding_horizontal</item>
    <item name="android:paddingEnd">@dimen/settings_header_user_container_padding_horizontal</item>
  </style>

  <style name="Settings.Header.User.Photo" parent="None">
    <!-- TODO add border to photo (foreground?) -->
  </style>

  <style name="Settings.Header.User.Name" parent="None">
    <item name="android:maxLines">2</item>
    <item name="android:textAppearance">@style/TextAppearance.Squanchy.Settings.Header.User.Name</item>
  </style>

  <style name="TextAppearance.Squanchy.Settings.Header.User.Name" parent="None">
    <item name="android:textColor">?android:textColorPrimary</item>
    <item name="android:textSize">@dimen/settings_header_user_name_text</item>
    <item name="fontPath">?titleTypeface</item>
  </style>

  <style name="ThemeOverlay.About.AppBar" parent="ThemeOverlay.AppCompat.Light">
    <item name="android:textColorPrimary">@color/primary</item>
    <item name="colorControlNormal">@color/primary</item>
  </style>

  <style name="ThemeOverlay.About.Opensource" parent="Theme.Squanchy" />

  <style name="About.Button" parent="Widget.AppCompat.Button.Colored">
    <item name="android:background">@drawable/color_button_background</item>
    <item name="android:backgroundTint">?colorControlNormal</item>
    <item name="android:textAllCaps">false</item>
    <item name="android:textAppearance">@style/TextAppearance.Squanchy.About.Button</item>
  </style>

  <style name="TextAppearance.Squanchy.About.Button" parent="None">
    <item name="android:textColor">@color/white</item>
    <item name="android:textSize">16sp</item>
    <item name="fontPath">?titleTypeface</item>
  </style>

</resources>
