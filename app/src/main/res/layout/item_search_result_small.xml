<?xml version="1.0" encoding="utf-8"?>
<net.squanchy.search.SearchItemView xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  style="@style/Search.GenericItem"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:padding="@dimen/search_card_item_padding">

  <ImageView
    android:id="@+id/speakerPhoto"
    style="@style/Schedule.Card.Speaker.Photo"
    android:layout_width="@dimen/search_photo"
    android:layout_height="@dimen/search_photo"
    android:layout_gravity="center_horizontal"
    android:layout_marginBottom="@dimen/search_card_item_photo_margin_bottom"
    tools:src="@mipmap/ic_launcher" />

  <TextView
    android:id="@+id/speakerNames"
    style="@style/Search.Caption"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center"
    tools:text="Speaker Name" />
</net.squanchy.search.SearchItemView>
